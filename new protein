                        <h3>Quiz Complete!</h3>
                        <div class="score" id="finalScore">0/15</div>
                        <p class="score-text" id="scoreText"></p>
                        <button class="btn restart-btn" onclick="restartQuiz()">
                            <i class="fas fa-redo"></i> Restart Quiz
                        </button>
                    </div>
                </div>
                
                <div class="quiz-controls">
                    <button class="btn" id="prevQBtn" onclick="prevQuestion()" disabled>
                        <i class="fas fa-arrow-left"></i> Previous Question
                    </button>
                    <button class="btn" id="nextQBtn" onclick="nextQuestion()" disabled>
                        Next Question <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <footer>
            <p>Proteins: Functions, Types, and Tests - Interactive Educational Tool</p>
            <p>Created for science education | All information based on biochemistry principles</p>
        </footer>
    </div>

    <script>
        // Presentation Slideshow
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        
        // Initialize slide dots
        function initSlideDots() {
            const dotsContainer = document.getElementById('slideDots');
            dotsContainer.innerHTML = '';
            
            for (let i = 0; i < totalSlides; i++) {
                const dot = document.createElement('div');
                dot.className = 'dot';
                if (i === 0) dot.classList.add('active');
                dot.addEventListener('click', () => goToSlide(i));
                dotsContainer.appendChild(dot);
            }
            
            updateSlideControls();
        }
        
        // Go to specific slide
        function goToSlide(n) {
            slides[currentSlide].classList.remove('active');
            currentSlide = (n + totalSlides) % totalSlides;
            slides[currentSlide].classList.add('active');
            
            // Update dots
            document.querySelectorAll('.dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSlide);
            });
            
            updateSlideControls();
        }
        
        // Next slide
        function nextSlide() {
            goToSlide(currentSlide + 1);
        }
        
        // Previous slide
        function prevSlide() {
            goToSlide(currentSlide - 1);
        }
        
        // Update slide controls (buttons)
        function updateSlideControls() {
            document.getElementById('prevBtn').disabled = currentSlide === 0;
            document.getElementById('nextBtn').disabled = currentSlide === totalSlides - 1;
        }
        
        // Quiz functionality
        let currentQuestion = 0;
        let score = 0;
        let userAnswers = new Array(15).fill(null);
        const questions = [
            {
                question: "What are proteins primarily made of?",
                options: ["Fatty acids", "Amino acids", "Nucleotides", "Monosaccharides"],
                correct: 1,
                explanation: "Proteins are polymers made up of amino acids linked together by peptide bonds."
            },
            {
                question: "Which element is NOT typically found in proteins?",
                options: ["Carbon", "Hydrogen", "Oxygen", "Phosphorus"],
                correct: 3,
                explanation: "Proteins primarily contain Carbon, Hydrogen, Oxygen, and Nitrogen. Phosphorus is not a typical component of proteins."
            },
            {
                question: "How many common amino acids are found in living organisms?",
                options: ["10", "20", "30", "40"],
                correct: 1,
                explanation: "There are 20 common amino acids that serve as the building blocks for proteins in living organisms."
            },
            {
                question: "Which level of protein structure refers to the sequence of amino acids?",
                options: ["Primary", "Secondary", "Tertiary", "Quaternary"],
                correct: 0,
                explanation: "The primary structure of a protein is the linear sequence of amino acids."
            },
            {
                question: "Which protein function involves speeding up biochemical reactions?",
                options: ["Structural", "Enzymatic", "Transport", "Defensive"],
                correct: 1,
                explanation: "Enzymes are proteins that act as biological catalysts, speeding up biochemical reactions."
            },
            {
                question: "Which of these is an example of a transport protein?",
                options: ["Amylase", "Insulin", "Hemoglobin", "Collagen"],
                correct: 2,
                explanation: "Hemoglobin is a transport protein that carries oxygen in the blood."
            },
            {
                question: "Which type of protein has a long, narrow structure and provides structural support?",
                options: ["Globular proteins", "Fibrous proteins", "Simple proteins", "Conjugated proteins"],
                correct: 1,
                explanation: "Fibrous proteins have long, narrow structures and provide structural support (e.g., keratin, collagen)."
            },
            {
                question: "What type of protein is hemoglobin, which contains an iron prosthetic group?",
                options: ["Simple protein", "Fibrous protein", "Conjugated protein", "Structural protein"],
                correct: 2,
                explanation: "Hemoglobin is a conjugated protein because it contains a non-protein component (the iron-containing heme group)."
            },
            {
                question: "Which of these is a complete protein source with all essential amino acids?",
                options: ["Beans", "Rice", "Eggs", "Nuts"],
                correct: 2,
                explanation: "Eggs are considered a complete protein source as they contain all nine essential amino acids."
            },
            {
                question: "Which test detects proteins by reacting with peptide bonds to produce a violet color?",
                options: ["Ninhydrin test", "Biuret test", "Xanthoproteic test", "Iodine test"],
                correct: 1,
                explanation: "The Biuret test detects peptide bonds and produces a violet/purple color in the presence of proteins."
            },
            {
                question: "Which amino acids does the Xanthoproteic test specifically detect?",
                options: ["Acidic amino acids", "Basic amino acids", "Aromatic amino acids", "Sulfur-containing amino acids"],
                correct: 2,
                explanation: "The Xanthoproteic test detects aromatic amino acids (tyrosine, tryptophan, phenylalanine) through nitration."
            },
            {
                question: "Which protein is responsible for muscle contraction?",
                options: ["Collagen", "Insulin", "Actin and myosin", "Hemoglobin"],
                correct: 2,
                explanation: "Actin and myosin are proteins that interact to cause muscle contraction."
            },
            {
                question: "What is the quaternary structure of a protein?",
                options: ["Sequence of amino acids", "Local folding patterns", "3D structure of a single polypeptide", "Combination of multiple polypeptide chains"],
                correct: 3,
                explanation: "Quaternary structure refers to the arrangement of multiple polypeptide chains in a protein complex."
            },
            {
                question: "Which of these is an example of a structural protein?",
                options: ["Amylase", "Insulin", "Collagen", "Hemoglobin"],
                correct: 2,
                explanation: "Collagen is a structural protein that provides strength to skin, bones, and connective tissues."
            },
            {
                question: "What color change indicates a positive Ninhydrin test?",
                options: ["Yellow to orange", "Blue to violet", "Red to blue", "Colorless to brown"],
                correct: 1,
                explanation: "The Ninhydrin test produces a blue-violet color (Ruhemann's purple) when it reacts with amino acids."
            }
        ];
        
        // Initialize quiz
        function initQuiz() {
            const questionsContainer = document.getElementById('questionsContainer');
            questionsContainer.innerHTML = '';
            
            questions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'question';
                questionDiv.id = `question${index}`;
                
                questionDiv.innerHTML = `
                    <div>
                        <span class="question-number">${index + 1}</span>
                        <span class="question-text">${q.question}</span>
                    </div>
                    <div class="options">
                        ${q.options.map((option, optIndex) => `
                            <div class="option" data-index="${optIndex}" onclick="selectAnswer(${index}, ${optIndex})">
                                ${String.fromCharCode(65 + optIndex)}. ${option}
                            </div>
                        `).join('')}
                    </div>
                    <div class="feedback" id="feedback${index}"></div>
                `;
                
                questionsContainer.appendChild(questionDiv);
            });
        }
        
        // Start the quiz
        function startQuiz() {
            document.getElementById('quizIntro').classList.remove('active');
            document.getElementById('questionsContainer').classList.add('active');
            document.getElementById('results').classList.remove('active');
            
            document.getElementById('prevQBtn').disabled = false;
            document.getElementById('nextQBtn').disabled = false;
            
            showQuestion(0);
        }
        
        // Show specific question
        function showQuestion(n) {
            document.querySelectorAll('.question').forEach((q, index) => {
                q.classList.remove('active');
                if (index === n) q.classList.add('active');
            });
            
            // Update quiz controls
            document.getElementById('prevQBtn').disabled = n === 0;
            document.getElementById('nextQBtn').disabled = n === questions.length - 1;
            
            // Update question number indicator
            document.querySelectorAll('.question-number').forEach((num, index) => {
                num.textContent = index + 1;
            });
            
            currentQuestion = n;
        }
        
        // Next question
        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                showQuestion(currentQuestion + 1);
            }
        }
        
        // Previous question
        function prevQuestion() {
            if (currentQuestion > 0) {
                showQuestion(currentQuestion - 1);
            }
        }
        
        // Select answer
        function selectAnswer(questionIndex, answerIndex) {
            const question = questions[questionIndex];
            const optionDivs = document.querySelectorAll(`#question${questionIndex} .option`);
            const feedbackDiv = document.getElementById(`feedback${questionIndex}`);
            
            // Clear previous selections
            optionDivs.forEach(div => {
                div.classList.remove('selected', 'correct', 'incorrect');
            });
            
            // Mark selected option
            optionDivs[answerIndex].classList.add('selected');
            
            // Check if correct
            if (answerIndex === question.correct) {
                optionDivs[answerIndex].classList.add('correct');
                feedbackDiv.textContent = `Correct! ${question.explanation}`;
                feedbackDiv.className = 'feedback correct';
                
                // Update score if not already answered
                if (userAnswers[questionIndex] === null) {
                    score++;
                }
            } else {
                optionDivs[answerIndex].classList.add('incorrect');
                optionDivs[question.correct].classList.add('correct');
                feedbackDiv.textContent = `Incorrect. The correct answer is ${String.fromCharCode(65 + question.correct)}. ${question.explanation}`;
                feedbackDiv.className = 'feedback incorrect';
            }
            
            // Store user answer
            userAnswers[questionIndex] = answerIndex;
            
            // If this is the last question, show results
            if (questionIndex === questions.length - 1) {
                setTimeout(showResults, 1500);
            }
        }
        
        // Show quiz results
        function showResults() {
            document.getElementById('questionsContainer').classList.remove('active');
            document.getElementById('results').classList.add('active');
            
            const finalScore = document.getElementById('finalScore');
            const scoreText = document.getElementById('scoreText');
            
            finalScore.textContent = `${score}/${questions.length}`;
            
            // Set score message
            if (score === questions.length) {
                scoreText.textContent = "Perfect! You're a protein expert!";
            } else if (score >= questions.length * 0.7) {
                scoreText.textContent = "Great job! You have a good understanding of proteins.";
            } else if (score >= questions.length * 0.5) {
                scoreText.textContent = "Good effort! Review the presentation to improve your knowledge.";
            } else {
                scoreText.textContent = "Keep learning! Review the presentation and try again.";
            }
        }
        
        // Restart quiz
        function restartQuiz() {
            score = 0;
            userAnswers = new Array(15).fill(null);
            currentQuestion = 0;
            
            // Reset all question displays
            document.querySelectorAll('.question').forEach((q, index) => {
                const optionDivs = q.querySelectorAll('.option');
                const feedbackDiv = document.getElementById(`feedback${index}`);
                
                optionDivs.forEach(div => {
                    div.classList.remove('selected', 'correct', 'incorrect');
                });
                
                feedbackDiv.textContent = '';
                feedbackDiv.className = 'feedback';
            });
            
            document.getElementById('quizIntro').classList.add('active');
            document.getElementById('questionsContainer').classList.remove('active');
            document.getElementById('results').classList.remove('active');
            
            document.getElementById('prevQBtn').disabled = true;
            document.getElementById('nextQBtn').disabled = true;
        }
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initSlideDots();
            initQuiz();
            
            // Add keyboard navigation for slides
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowLeft') prevSlide();
                if (e.key === 'ArrowRight') nextSlide();
            });
        });
    </script>
</body>
</html>
